{
  "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": [
          "ES2018",
          "ES2019",
          "DOM",
          "ES2020.String"
      ],
      "types": [
          "node"
      ],
      "isolatedModules": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "sourceMap": true,
      "outDir": "./dist"
  },
  "compileOnSave": false,
  "include": [
      "./src"
  ],
  "exclude": [
      "node_modules"
  ]
}